# Underscore, a JS library with useful functional programming helpers
gem 'underscore-rails', '~> 1.6.0'

# Thin, a production-grade Ruby web server to replace out-of-the-box WEBrick
#gem 'eventmachine', '~> 1.0.3'
#gem 'thin', '~> 1.6.2'

# rails_12factor, to replace the need for plugins for Heroku
gem 'rails_12factor', group: :production

# Use unicorn as the app server
gem 'unicorn', '~> 0.991.0'

# New Relic, to monitor application's performance
gem 'newrelic_rpm'

