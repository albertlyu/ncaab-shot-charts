<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center" colspan="2"><a data-toggle="tooltip" data-placement="top" title="FGM-FGA at rim (layups and dunks)">At Rim</a></th>
                <th class="text-center" colspan="2"><a data-toggle="tooltip" data-placement="top" title="FGM-FGA from 0-8 feet out">Short</a></th>
                <th class="text-center" colspan="2"><a data-toggle="tooltip" data-placement="top" title="FGM-FGA from 8-14 feet out">Mid</a></th>
                <th class="text-center" colspan="2"><a data-toggle="tooltip" data-placement="top" title="FGM-FGA from 14-21 feet out">Long</a></th>
                <th class="text-center" colspan="2"><a data-toggle="tooltip" data-placement="top" title="FGM-FGA from 3-point range">3P%</a></th>
                <th class="text-center" colspan="2"><a data-toggle="tooltip" data-placement="top" title="FGM-FGA from inside the paint">Paint</a></th>
                <th class="text-center" colspan="2"><a data-toggle="tooltip" data-placement="top" title="2-pt FGM-FGA from outside the paint">Non-Paint</a></th>
            </tr>
        </thead>
        <tbody>
            <% @team_shot_stats.each do |stat| %>
            <tr>
                <td class="text-center"><%= stat.at_rim_made %>-<%= stat.at_rim_att %></td>
                <td class="text-center"><%= '%.3f' % stat.at_rim_pct_made %></td>
                <td class="text-center"><%= stat.short_made %>-<%= stat.short_att %></td>
                <td class="text-center"><%= '%.3f' % stat.short_pct_made %></td>
                <td class="text-center"><%= stat.mid_made %>-<%= stat.mid_att %></td>
                <td class="text-center"><%= '%.3f' % stat.mid_pct_made %></td>
                <td class="text-center"><%= stat.long_made %>-<%= stat.long_att %></td>
                <td class="text-center"><%= '%.3f' % stat.long_pct_made %></td>
                <td class="text-center"><%= stat.threes_made %>-<%= stat.threes_att %></td>
                <td class="text-center"><%= '%.3f' % stat.threes_pct_made %></td>
                <td class="text-center"><%= stat.in_the_paint_made %>-<%= stat.in_the_paint_att %></td>
                <td class="text-center"><%= '%.3f' % stat.in_the_paint_pct_made %></td>
                <td class="text-center"><%= stat.outside_the_paint_made %>-<%= stat.outside_the_paint_att %></td>
                <td class="text-center"><%= '%.3f' % stat.outside_the_paint_pct_made %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
