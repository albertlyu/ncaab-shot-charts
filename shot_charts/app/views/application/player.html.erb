<div class="stripe">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading"><%= @player.player_first_name %> <%= @player.player_last_name %>'s Shot Chart</div>
            <div id="shotchart"></div>

              <%= javascript_tag do %>
                var shots = <%= @shots %>;
                var made = _.where(shots, {event_desc: "Field Goal Made"});
                var miss = _.where(shots, {event_desc: "Field Goal Missed"});
                var madeArray = $.map(made, function(shot, index){
                  return [[shot.x_coord, shot.y_coord]];
                });
                var missArray = $.map(miss, function(shot, index){
                  return [[shot.x_coord, shot.y_coord]];
                });
              <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <h3><%= @player.player_first_name %> <%= @player.player_last_name %></h3>
        <ul>
        	<%= @plays.each do |play| %>
	        <li><%= play.details %></a></li>
	        <% end %>
        </ul>
      </div>
      <div class="col-md-6">
        <h3>Game Log</h3>
        <ul>
          <%= @playergames.each do |playergame| %>
          <li><a href="#"><%= playergame.game_id %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<br>