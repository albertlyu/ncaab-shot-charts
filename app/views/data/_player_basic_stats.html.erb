<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center"><a data-toggle="tooltip" data-placement="top" title="Points per game">PPG</a></th>
                <th class="text-center"><a data-toggle="tooltip" data-placement="top" title="Rebounds per game">RPG</a></th>
                <th class="text-center"><a data-toggle="tooltip" data-placement="top" title="Assists per game">APG</a></th>
                <th class="text-center"><a data-toggle="tooltip" data-placement="top" title="Steals per game">SPG</a></th>
                <th class="text-center"><a data-toggle="tooltip" data-placement="top" title="Blocks per game">BPG</a></th>
                <th class="text-center"><a data-toggle="tooltip" data-placement="top" title="Field goal percentage">FG%</a></th>
                <th class="text-center"><a data-toggle="tooltip" data-placement="top" title="Free throw percentage">FT%</a></th>
                <th class="text-center"><a data-toggle="tooltip" data-placement="top" title="3-point field goal percentage">3P%</a></th>
                <th class="text-center"><a data-toggle="tooltip" data-placement="top" title="Effective field goal percentage">eFG%</a></th>
                <th class="text-center"><a data-toggle="tooltip" data-placement="top" title="Points per 40 min">Pts/40</a></th>
                <th class="text-center"><a data-toggle="tooltip" data-placement="top" title="Rebounds per 40 min">Reb/40</a></th>
                <th class="text-center"><a data-toggle="tooltip" data-placement="top" title="Assists per 40 min">Ast/40</a></th>
            </tr>
        </thead>
        <tbody>
            <% @player_basic_stats.each do |stat| %>
            <tr>
                <td class="text-center"><%= '%.1f' % stat.points_per_game.to_f %></td>
                <td class="text-center"><%= '%.1f' % stat.rebounds_per_game.to_f %></td>
                <td class="text-center"><%= '%.1f' % stat.assists_per_game.to_f %></td>
                <td class="text-center"><%= '%.1f' % stat.steals_per_game.to_f %></td>
                <td class="text-center"><%= '%.1f' % stat.blocks_per_game.to_f %></td>
                <td class="text-center"><%= '%.3f' % stat.field_goals_pct.to_f %></td>
                <td class="text-center"><%= '%.3f' % stat.free_throws_pct.to_f %></td>
                <td class="text-center"><%= '%.3f' % stat.three_point_field_goals_pct.to_f %></td>
                <td class="text-center"><%= '%.3f' % stat.effective_field_goals_pct.to_f %></td>
                <td class="text-center"><%= '%.1f' % stat.points_per_40_minutes.to_f %></td>
                <td class="text-center"><%= '%.1f' % stat.rebounds_per_40_minutes.to_f %></td>
                <td class="text-center"><%= '%.1f' % stat.assists_per_40_minutes.to_f %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
