<h3><strong>Draft 3.0 Top 50 Players</strong></h3>

<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <tr>
      <th>Point Guards</th>
      <th>Team</th>
      <th>PPG</th>
      <th>RPG</th>
      <th>APG</th>
      <th>SPG</th>
      <th>BPG</th>
      <th>FG%</th>
      <th>FT%</th>
      <th>3FG%</th>
      <th>eFG%</th>
    </tr>
    <% @pg_basic_stats.each do |stat| %>
    <tr>
      <td><a href="../players/<%= stat.player.player_id %>"><%= stat.player.player_first_name %> <%= stat.player.player_last_name %></a></td>
      <td><a href="../teams/<%= stat.player.team_id %>"><%= stat.player.team.team_name %> <%= stat.player.team.team_mascot %></a></td>
      <td><%= '%.1f' % stat.ppg %></td>
      <td><%= '%.1f' % stat.rpg %></td>
      <td><%= '%.1f' % stat.apg %></td>
      <td><%= '%.1f' % stat.spg %></td>
      <td><%= '%.1f' % stat.bpg %></td>
      <td><%= '%.3f' % stat.fgpct %></td>
      <td><%= '%.3f' % stat.ftpct %></td>
      <td><%= '%.3f' % stat.threefgpct %></td>
      <td><%= '%.3f' % stat.efgpct %></td>
    </tr>
    <% end %>
  </table>
</div>

