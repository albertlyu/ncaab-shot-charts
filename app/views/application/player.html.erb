<h3><strong><%= @player.player_first_name %> <%= @player.player_last_name %></strong></h3>
<h4><a href="../teams/<%= @player.team_id %>"><%= @player.team.team_name %> <%= @player.team.team_mascot %></a></h4>

<%= render "data/shots" %>
<%= render "data/player_basic_stats" %>

<h4>Game Log</h4>
<ul>
  <% @playergames.each do |playergame| %>
  <li><a href="../games/<%= playergame.game_id %>"><%= playergame.game.date %>: <%= Team.find_by(team_id: playergame.game.home_team_id).team_name %> vs <%= Team.find_by(team_id: playergame.game.away_team_id).team_name %> at <%= playergame.game.venue_name %> </a></li>
  <% end %>
</ul>