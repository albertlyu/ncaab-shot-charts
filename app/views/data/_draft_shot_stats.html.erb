<div class="table-responsive">
  <table class="table tablesorter table-striped table-bordered">
    <thead>
      <tr>
        <th>Point Guards</th>
        <th>Team</th>
        <th><a data-toggle="tooltip" data-placement="top" title="FG% at rim (layups and dunks)">At Rim</a></th>
        <th><a data-toggle="tooltip" data-placement="top" title="FG% from 0-8 feet out">Short</a></th>
        <th><a data-toggle="tooltip" data-placement="top" title="FG% from 8-14 feet out">Mid</a></th>
        <th><a data-toggle="tooltip" data-placement="top" title="FG% from 14-21 feet out">Long</a></th>
        <th><a data-toggle="tooltip" data-placement="top" title="FG% from 3-point range">3P%</a></th>
        <th><a data-toggle="tooltip" data-placement="top" title="FG% from inside the paint">Paint</a></th>
        <th><a data-toggle="tooltip" data-placement="top" title="2-pt FG% from outside the paint">Non-Paint</a></th>
      </tr>
    </thead>
    <tbody>
      <% @pg_shot_stats.each do |stat| %>
      <tr>
        <td><strong><a href="../players/<%= stat.player.player_id %>"><%= stat.player.player_first_name %> <%= stat.player.player_last_name %></a></strong></td>
        <td><a href="../teams/<%= stat.player.team_id %>"><%= stat.player.team.team_name %> <%= stat.player.team.team_mascot %></a></td>
        <td><%= '%.3f' % stat.at_rim_pct_made.to_f %></td>
        <td><%= '%.3f' % stat.short_pct_made.to_f %></td>
        <td><%= '%.3f' % stat.mid_pct_made.to_f %></td>
        <td><%= '%.3f' % stat.long_pct_made.to_f %></td>
        <td><%= '%.3f' % stat.threes_pct_made.to_f %></td>
        <td><%= '%.3f' % stat.in_the_paint_pct_made.to_f %></td>
        <td><%= '%.3f' % stat.outside_the_paint_pct_made.to_f %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

