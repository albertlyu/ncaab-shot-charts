<div class="stripe">
  <div class="container">
    <div class="row">
      <div class="col-sm-9">
        <h3><strong><%= @player.player_first_name %> <%= @player.player_last_name %></strong></h3>
        <h4><a href="../teams/<%= @player.team_id %>"><%= @player.team.team_name %> <%= @player.team.team_mascot %></a></h4>
      </div>
    </div>
    
    <%= render "data/shots" %>
    <%= render "data/player_basic_stats" %>

    <div class="row">
      <div class="col-sm-6">
        <h4>Play-by-Play</h4>
        <ul>
        	<% @plays.each do |play| %>
	        <li><%= play.details %></a></li>
	        <% end %>
        </ul>
      </div>
      <div class="col-sm-3">
        <h4>Game Log</h4>
        <ul>
          <% @playergames.each do |playergame| %>
          <li><a href="../games/<%= playergame.game_id %>"><%= playergame.game_id %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<br>